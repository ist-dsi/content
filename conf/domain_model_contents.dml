package module.contents.domain;


valueType pt.utl.ist.fenix.tools.util.i18n.MultiLanguageString as MultiLanguageString {
    externalizeWith {
        String exportAsString();
    }

    internalizeWith importFromString();
}

valueType pt.utl.ist.fenix.tools.util.Strings as Strings {
    externalizeWith {
        String exportAsString();
    }

    internalizeWith importFromString();
}


class PageNode extends .myorg.domain.contents.Node {
}

class Page {
	MultiLanguageString title;
	MultiLanguageString link;
}

class Section {
	MultiLanguageString title;
	MultiLanguageString contents;
	Integer sectionOrder;
}

class WikiPageNode extends .myorg.domain.contents.Node {
}

class WikiPage {
}

class WikiPageVersion {
	MultiLanguageString title;
	MultiLanguageString link;
	MultiLanguageString content;
	DateTime created;
}


relation MyOrgPage {
	.myorg.domain.MyOrg playsRole myOrg;
	Page playsRole pages {
		multiplicity *;
	}
}

relation PagePageNode {
	Page playsRole page;
	PageNode playsRole nodes {
		multiplicity *;
	}
}

relation MyOrgSection {
	.myorg.domain.MyOrg playsRole myOrg;
	Section playsRole sections {
		multiplicity *;
	}
}

relation PageSection {
	Page playsRole page;
	Section playsRole sections {
		multiplicity *;
	}
}

relation WikiPageNodeWikiPage {
	WikiPageNode playsRole wikiPageNode;
	WikiPage playsRole wikiPage;
}

relation WikiPageWikiPageVersion {
	WikiPage playsRole wikiPage;
	WikiPageVersion playsRole wikiPageVersions {
		multiplicity *;
	}
}

relation WikiPageLastWikiPageVersion {
	WikiPage playsRole wikiPageFromLastVersion;
	WikiPageVersion playsRole lastWikiPageVersion;
}
